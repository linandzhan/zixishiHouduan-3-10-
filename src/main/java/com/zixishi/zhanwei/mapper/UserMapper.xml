<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zixishi.zhanwei.mapper.UserMapper">
    <resultMap id="userMap" type="user">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="phone" column="phone"/>
        <result property="avator" column="avator"/>
        <result property="createTime" column="create_time"/>
        <result property="gender" column="gender"/>
        <result property="balance" column="balance"/>
        <result property="password" column="password"/>
    </resultMap>


    <select id="search" resultMap="userMap">
        select * from user
        <where>
            <if test="phone != null and phone != ''">
                <bind name="pattern" value="'%' + phone + '%'"/>
                and phone like #{pattern}
            </if>
            <if test="username != null">
                <bind name="pattern" value="'%' + username + '%'"/>
                and username like #{pattern}
            </if>
        </where>
    </select>

    <select id="searchByUsername" resultType="long">
        select count(*) from user where username = #{username}
    </select>

    <select id="searchByPhone" resultType="long">
           select count(*) from user where phone = #{phone}
    </select>

    <select id="count" resultType="long">
        select count(*) from user
        <where>
            <if test="phone != null and phone != ''">
                <bind name="pattern" value="'%' + phone + '%'"/>
                and username like #{pattern}
            </if>
            <if test="username != null">
                <bind name="pattern" value="'%' + username + '%'"/>
                and username like #{pattern}
            </if>
        </where>
    </select>

    <update id="updateBalance" parameterType="user">
        update user set balance = #{balance} where id = #{id}
    </update>


    <select id="find" resultMap="userMap">
        select * from user where id = #{id}
    </select>

    <insert id="save" parameterType="user">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="username != null">
                username,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="balance != null">
                balance,
            </if>
            <if test="gender != null">
                gender,
            </if>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="username != null">
                #{username},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="phone != null">
                #{phone},
            </if>
            <if test="balance!= null">
                #{balance},
            </if>
            <if test="gender!= null">
                #{gender},
            </if>
        </trim>
    </insert>


    <select id="get" resultMap="userMap">
        select * from user where id = #{id}
    </select>

    <select id="findByPhone" resultMap="userMap">
        select * from user where phone = #{phone}
    </select>
</mapper>